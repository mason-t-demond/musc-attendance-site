@page
@model MUSCAttendance.Pages.Forms.IndexModel

@{
    ViewData["Title"] = "Attendance Logs";
}


<div>
    <form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by ID number:
            <input type="text" id ="studentId" name="studentId" value="@Model.StudentId" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<h1>@Html.DisplayFor(model => model.Student.FullName)</h1>


<h4>Progress</h4>
<dl >
        <dt >
            Total Attendances
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalAttendances)               
        </dd>
        <dt >
            Hendrix events
        </dt>
        <dd >
            @Html.DisplayFor(model => model.HendrixCount)

        </dd>
        <dt >
            UCA events (Up to 10)
        </dt>
        <dd >
            @Html.DisplayFor(model => model.UCACount)

        </dd>
        <dt >
            Other events (Up to 10)
        </dt>
        <dd >
            @Html.DisplayFor(model => model.OtherCount)
        </dd>
    </dl>
</div>

<hr>

<div>
    <h4>Attendances</h4>
    <p>
        <a asp-page="Create">Create New</a>
    </p>    

    
      <table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Form[0].EventDate)</th>
            <th>@Html.DisplayNameFor(model => model.Form[0].Type)</th>
            <th>@Html.DisplayNameFor(model => model.Form[0].Performed)</th>
            <th>@Html.DisplayNameFor(model => model.Form[0].HasProgram)</th>
            <th>@Html.DisplayNameFor(model => model.Form[0].OtherDescription)</th>
            <th>@Html.DisplayNameFor(model => model.Form[0].ProgramPhotoUrl)</th>
            <th>@Html.DisplayNameFor(model => model.Form[0].ProgramDescription)</th>
            <th>@Html.DisplayNameFor(model => model.Form[0].Approved)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Form) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasProgram)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.OtherDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramPhotoUrl)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.ProgramDescription)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Approved)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
</div>


