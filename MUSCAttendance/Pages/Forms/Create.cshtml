@page
@model MUSCAttendance.Pages.Forms.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Attendance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student ID</label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Form.EventDate" class="control-label"></label>
                <input asp-for="Form.EventDate" class="form-control" />
                <span asp-validation-for="Form.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Form.Type" class="control-label">Event Type</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Form.Type" value="Hendrix" />
                    <label class="form-check-label">HDX</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Form.Type" value="UCA" />
                    <label class="form-check-label">UCA</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Form.Type" value="Other" id="otherRadio"/>
                    <label class="form-check-label">Other</label>
                </div>
                <span asp-validation-for="Form.Type" class="text-danger"></span>
            </div>


            <div class="form-group" id="otherDescriptionGroup">
                <label asp-for="Form.OtherDescription" class="control-label"></label>
                <input asp-for="Form.OtherDescription" class="form-control" />
                <span asp-validation-for="Form.OtherDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.Form.Performed)</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Form.Performed" value="true" />
                    <label class="form-check-label">Yes</label>
                </div>
            <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Form.Performed" value="false" />
                    <label class="form-check-label">No</label>
                </div>
                <span asp-validation-for="Form.Performed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.Form.HasProgram)</label>
             <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Form.HasProgram" value="true" id="hasProgramYes" />
                <label class="form-check-label">Yes</label>
             </div>
             <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Form.HasProgram" value="false" id="hasProgramNo" />
                <label class="form-check-label">No</label>
             </div>
                <span asp-validation-for="Form.HasProgram" class="text-danger"></span>
            </div>

            <div class="form-group" id="programDescriptionGroup">
                <label asp-for="Form.ProgramDescription" class="control-label"></label>
                <input asp-for="Form.ProgramDescription" class="form-control" />
                <span asp-validation-for="Form.ProgramDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}