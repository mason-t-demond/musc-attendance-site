@page
@model MUSCAttendance.Pages.Forms.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Attendance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             
            <div class="form-group">
                <label asp-for="Form.EventDate" class="control-label"></label>
                <input asp-for="Form.EventDate" class="form-control" />
                <span asp-validation-for="Form.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Form.Type" class="control-label"></label>
                <select asp-for="Form.Type" class="form-control">
                    <option value="null"> </option>
                    <option value="HDX">HDX</option>
                    <option value="UCA">UCA</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Form.Type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Form.Performed" /> @Html.DisplayNameFor(model => model.Form.Performed)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Form.HasProgram" /> @Html.DisplayNameFor(model => model.Form.HasProgram)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Form.OtherDescription" class="control-label"></label>
                <input asp-for="Form.OtherDescription" class="form-control" />
                <span asp-validation-for="Form.OtherDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Form.ProgramDescription" class="control-label"></label>
                <input asp-for="Form.ProgramDescription" class="form-control" />
                <span asp-validation-for="Form.ProgramDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}